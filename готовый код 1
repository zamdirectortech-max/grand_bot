                "–¢–∞–º –º–æ–∂–Ω–æ —Å–º–æ—Ç—Ä–µ—Ç—å –æ—Ü–µ–Ω–∫–∏, —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ, –ø–æ–¥–∞–≤–∞—Ç—å –∑–∞—è–≤–∫–∏."
            )

        elif query.data == "stud_dekanat":
            query.edit_message_text(
                "üìë –î–µ–∫–∞–Ω–∞—Ç –∏ –∫—É—Ä–∞—Ç–æ—Ä:\n\n"
                "- –û–±—Ä–∞—â–∞–π—Ç–µ—Å—å –≤ –¥–µ–∫–∞–Ω–∞—Ç —Ñ–∞–∫—É–ª—å—Ç–µ—Ç–∞\n"
                "- –ö—É—Ä–∞—Ç–æ—Ä –ø–æ–º–æ–≥–∞–µ—Ç —Å –∞–¥–∞–ø—Ç–∞—Ü–∏–µ–π –∏ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏–µ–π"
            )

        elif query.data == "stud_life":
            query.edit_message_text(
                "üèÄ –°—Ç—É–¥–µ–Ω—á–µ—Å–∫–∞—è –∂–∏–∑–Ω—å:\n\n"
                "- –°–ø–æ—Ä—Ç–∏–≤–Ω—ã–µ —Å–µ–∫—Ü–∏–∏\n"
                "- –ö—Ä—É–∂–∫–∏ –ø–æ –∏–Ω—Ç–µ—Ä–µ—Å–∞–º\n"
                "- –í–æ–ª–æ–Ω—Ç—ë—Ä—Å–∫–∏–µ –¥–≤–∏–∂–µ–Ω–∏—è\n"
                "- –ö–æ–Ω–∫—É—Ä—Å—ã –∏ —Ñ–µ—Å—Ç–∏–≤–∞–ª–∏\n\n"
                "–°–ª–µ–¥–∏—Ç–µ –∑–∞ –∞–Ω–æ–Ω—Å–∞–º–∏ –Ω–∞ —Å–∞–π—Ç–µ –∏ –≤ Telegram-–∫–∞–Ω–∞–ª–∞—Ö."
            )

        elif query.data == "stud_support":
            query.edit_message_text(
                "üÜò –ü–æ–¥–¥–µ—Ä–∂–∫–∞ —Å—Ç—É–¥–µ–Ω—Ç–æ–≤:\n\n"
                "- –¢–µ–ª–µ—Ñ–æ–Ω –¥–æ–≤–µ—Ä–∏—è\n"
                "- –¶–µ–Ω—Ç—Ä –ø—Å–∏—Ö–æ–ª–æ–≥–∏—á–µ—Å–∫–æ–π –ø–æ–º–æ—â–∏\n"
                "- –û—Ç–¥–µ–ª –ø–æ –¥–µ–ª–∞–º –º–æ–ª–æ–¥–µ–∂–∏\n"
                "- –°—Ç—É–¥—Å–æ–≤–µ—Ç —Ñ–∞–∫—É–ª—å—Ç–µ—Ç–∞"
            )

        # --- –ö–æ–Ω—Ç–∞–∫—Ç—ã ---
        elif query.data == "contacts":
            query.edit_message_text(
                "‚òé –ö–æ–Ω—Ç–∞–∫—Ç—ã —É–Ω–∏–≤–µ—Ä—Å–∏—Ç–µ—Ç–∞:\n\n"
                "üìç –®—ã–º–∫–µ–Ω—Ç, –ø—Ä. –¢–∞—É–∫–µ —Ö–∞–Ω–∞, 5\n"
                "üìû +7 (7252) 32-17-37\n"
                "üåê www.auezov.edu.kz"
            )

        # --- AI ---
        elif query.data == "ask_ai":
            # –æ—Ç–º–µ—á–∞–µ–º, —á—Ç–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –ø–µ—Ä–µ—à—ë–ª –≤ —Ä–µ–∂–∏–º –∑–∞–¥–∞–≤–∞—Ç—å –≤–æ–ø—Ä–æ—Å –ò–ò
            context.user_data["ask_ai"] = True
            query.edit_message_text("–ù–∞–ø–∏—à–∏—Ç–µ —Å–≤–æ–π –≤–æ–ø—Ä–æ—Å –ò–ò (–Ω–∞–ø—Ä–∏–º–µ—Ä: –ö–∞–∫ –≤–æ–π—Ç–∏ –≤ SMART UKGU?) üëá")

        elif query.data == "main_menu":
            # –í–æ–∑–≤—Ä–∞—â–∞–µ–º –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é, —Ä–µ–¥–∞–∫—Ç–∏—Ä—É—è —Ç–µ–∫—É—â–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ:
            keyboard = [
                [InlineKeyboardButton("üéì –ê–±–∏—Ç—É—Ä–∏–µ–Ω—Ç–∞–º", callback_data="abit")],
                [InlineKeyboardButton("üìö –°—Ç—É–¥–µ–Ω—Ç–∞–º", callback_data="students")],
                [InlineKeyboardButton("‚òé –ö–æ–Ω—Ç–∞–∫—Ç—ã", callback_data="contacts")],
                [InlineKeyboardButton("‚ùì –ó–∞–¥–∞—Ç—å –≤–æ–ø—Ä–æ—Å –ò–ò", callback_data="ask_ai")],
            ]
            try:
                query.edit_message_text(
                    "üè† –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é\n\n–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞–∑–¥–µ–ª:",
                    reply_markup=InlineKeyboardMarkup(keyboard)
                )
            except BadRequest:
                # –µ—Å–ª–∏ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –Ω–µ —Å—Ä–∞–±–æ—Ç–∞–ª–æ (—Ç–æ—Ç –∂–µ —Ç–µ–∫—Å—Ç) ‚Äî –æ—Ç–ø—Ä–∞–≤–∏–º –Ω–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                query.message.reply_text(
                    "üè† –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é\n\n–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞–∑–¥–µ–ª:",
                    reply_markup=InlineKeyboardMarkup(keyboard)
                )

    except BadRequest:
        # –∏–≥–Ω–æ—Ä–∏—Ä—É–µ–º —Ç–∏–ø–æ–≤—É—é –æ—à–∏–±–∫—É "Message is not modified"
        pass

# ====== –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã—Ö —Å–æ–æ–±—â–µ–Ω–∏–π ======
def handle_message(update: Update, context: CallbackContext):
    user_text = update.message.text
    user_id = update.effective_user.id

    # –ï—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –≤ —Ä–µ–∂–∏–º–µ "ask_ai" (–Ω–∞–∂–∞–ª –∫–Ω–æ–ø–∫—É "–ó–∞–¥–∞—Ç—å –≤–æ–ø—Ä–æ—Å –ò–ò")
    if context.user_data.get("ask_ai"):
        context.user_data["ask_ai"] = False
        response = chatbot(user_text)
        if response:
            update.message.reply_text(response)
        else:
            # –±–æ—Ç –Ω–µ –∑–Ω–∞–µ—Ç ‚Äî —Ç–æ–ª—å–∫–æ –∞–¥–º–∏–Ω –º–æ–∂–µ—Ç –¥–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤—ã–π –æ—Ç–≤–µ—Ç
            if user_id == ADMIN_ID:
                update.message.reply_text("ü§î –Ø –Ω–µ –∑–Ω–∞—é –æ—Ç–≤–µ—Ç–∞. –ù–∞–ø–∏—à–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –æ—Ç–≤–µ—Ç, –∏ —è –∑–∞–ø–æ–º–Ω—é –µ–≥–æ:")
                context.user_data["waiting_for_answer"] = user_text  # –∂–¥–µ–º –æ—Ç–≤–µ—Ç –æ—Ç –∞–¥–º–∏–Ω–∞
            else:
                update.message.reply_text("ü§î –Ø –Ω–µ –∑–Ω–∞—é –æ—Ç–≤–µ—Ç–∞. –î–æ–±–∞–≤–∏—Ç—å –µ–≥–æ –≤ –±–∞–∑—É –º–æ–∂–µ—Ç —Ç–æ–ª—å–∫–æ –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä.")
        return

    # –ï—Å–ª–∏ –±–æ—Ç –∂–¥—ë—Ç –æ—Ç –∞–¥–º–∏–Ω–∞ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç (—Ä–µ–∂–∏–º –æ–±—É—á–µ–Ω–∏—è)
    if "waiting_for_answer" in context.user_data:
        if user_id != ADMIN_ID:
            update.message.reply_text("‚õî –¢–æ–ª—å–∫–æ –∞–¥–º–∏–Ω –º–æ–∂–µ—Ç –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–∞—Ç—å/–¥–æ–±–∞–≤–ª—è—Ç—å –æ—Ç–≤–µ—Ç—ã.")
            del context.user_data["waiting_for_answer"]
            return

        new_question = context.user_data["waiting_for_answer"]
        new_answer = user_text
        questions.append(new_question)
        answers.append(new_answer)
        retrain()
        save_knowledge()
        update.message.reply_text("‚úÖ –ù–æ–≤—ã–π –æ—Ç–≤–µ—Ç –¥–æ–±–∞–≤–ª–µ–Ω –≤ –±–∞–∑—É –∑–Ω–∞–Ω–∏–π.")
        del context.user_data["waiting_for_answer"]
        return

    # –ï—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –ø–∏—à–µ—Ç –æ–±—ã—á–Ω—ã–π —Ç–µ–∫—Å—Ç ‚Äî –¥–∞—ë–º –ø–æ–¥—Å–∫–∞–∑–∫—É –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –º–µ–Ω—é
    update.message.reply_text("–ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –º–µ–Ω—é –Ω–∏–∂–µ üëá (–∏–ª–∏ /start –¥–ª—è –≥–ª–∞–≤–Ω–æ–≥–æ –º–µ–Ω—é)")

# ====== –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞ ======
def main():
    updater = Updater(TOKEN, use_context=True)
    dp = updater.dispatcher

    # –ö–æ–º–∞–Ω–¥—ã
    dp.add_handler(CommandHandler("start", start))
    dp.add_handler(CommandHandler("reset", reset))  # —Ç–æ–ª—å–∫–æ –∞–¥–º–∏–Ω –º–æ–∂–µ—Ç –≤—ã–∑–≤–∞—Ç—å

    # –ö–Ω–æ–ø–∫–∏ –∏ —Å–æ–æ–±—â–µ–Ω–∏—è
    dp.add_handler(CallbackQueryHandler(button))
    dp.add_handler(MessageHandler(Filters.text & ~Filters.command, handle_message))

    print("‚úÖ –ë–æ—Ç –∑–∞–ø—É—â–µ–Ω...")
    updater.start_polling()
    updater.idle()

if __name__ == "__main__":
    main()
