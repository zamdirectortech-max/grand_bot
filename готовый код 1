# ====== –ó–∞–≥—Ä—É–∂–∞–µ–º –∏–ª–∏ —Å–æ–∑–¥–∞—ë–º knowledge.json ======
if os.path.exists("knowledge.json"):
    with open("knowledge.json", "r", encoding="utf-8") as f:
        data = json.load(f)
        questions = data.get("questions", DEFAULT_QUESTIONS.copy())
        answers = data.get("answers", DEFAULT_ANSWERS.copy())
else:
    questions = DEFAULT_QUESTIONS.copy()
    answers = DEFAULT_ANSWERS.copy()

def save_knowledge():
    with open("knowledge.json", "w", encoding="utf-8") as f:
        json.dump({"questions": questions, "answers": answers}, f, ensure_ascii=False, indent=4)

# ====== –í–µ–∫—Ç–æ—Ä–∏–∑–∞—Ü–∏—è / –º–æ–¥–µ–ª—å –ø–æ–∏—Å–∫–∞ ======
vectorizer = TfidfVectorizer()
X = vectorizer.fit_transform(questions)

def retrain():
    global X, vectorizer
    vectorizer = TfidfVectorizer()
    X = vectorizer.fit_transform(questions)

def chatbot(query: str):
    # –Ω–æ—Ä–º–∞–ª–∏–∑—É–µ–º –∑–∞–ø—Ä–æ—Å –Ω–µ–±–æ–ª—å—à–∏–º –æ–±—Ä–∞–∑–æ–º
    query_vec = vectorizer.transform([query])
    sims = cosine_similarity(query_vec, X).flatten()
    best_idx = sims.argmax()
    if sims[best_idx] < 0.2:  # –ø–æ—Ä–æ–≥ —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç–∏ (–º–æ–∂–Ω–æ –Ω–∞—Å—Ç—Ä–æ–∏—Ç—å)
        return None
    return answers[best_idx]

# ====== –ö–æ–º–∞–Ω–¥–∞ /reset (—Ç–æ–ª—å–∫–æ –∞–¥–º–∏–Ω) ======
def reset(update: Update, context: CallbackContext):
    user_id = update.effective_user.id
    if user_id != ADMIN_ID:
        update.message.reply_text("‚õî –£ –≤–∞—Å –Ω–µ—Ç –ø—Ä–∞–≤ –Ω–∞ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–µ —ç—Ç–æ–π –∫–æ–º–∞–Ω–¥—ã.")
        return

    global questions, answers
    questions = DEFAULT_QUESTIONS.copy()
    answers = DEFAULT_ANSWERS.copy()
    retrain()
    save_knowledge()
    update.message.reply_text("üîÑ –ë–∞–∑–∞ –∑–Ω–∞–Ω–∏–π —Å–±—Ä–æ—à–µ–Ω–∞ –¥–æ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–π.")

# ====== –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é (–≤—ã–∑–æ–≤ /start) ======
def start(update: Update, context: CallbackContext):
    keyboard = [
        [InlineKeyboardButton("üéì –ê–±–∏—Ç—É—Ä–∏–µ–Ω—Ç–∞–º", callback_data="abit")],
        [InlineKeyboardButton("üìö –°—Ç—É–¥–µ–Ω—Ç–∞–º", callback_data="students")],
        [InlineKeyboardButton("‚òé –ö–æ–Ω—Ç–∞–∫—Ç—ã", callback_data="contacts")],
        [InlineKeyboardButton("‚ùì –ó–∞–¥–∞—Ç—å –≤–æ–ø—Ä–æ—Å –ò–ò", callback_data="ask_ai")],
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    # –µ—Å–ª–∏ –∫–æ–º–∞–Ω–¥–∞ /start ‚Äî update.message –µ—Å—Ç—å
    if update.message:
        update.message.reply_text(
            "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π —á–∞—Ç-–±–æ—Ç –Æ–ö–£ –∏–º. –ú.–û. –ê—É—ç–∑–æ–≤–∞!\n\n–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞–∑–¥–µ–ª:",
            reply_markup=reply_markup,
        )
    else:
        # –Ω–∞ —Å–ª—É—á–∞–π –≤—ã–∑–æ–≤–∞ –∏–∑ callback ‚Äî –æ—Ç–ø—Ä–∞–≤–∏–º –≤ —á–∞—Ç –Ω–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
        update.effective_chat and context.bot.send_message(
            chat_id=update.effective_chat.id,
            text="–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω—ã–π —á–∞—Ç-–±–æ—Ç –Æ–ö–£ –∏–º. –ú.–û. –ê—É—ç–∑–æ–≤–∞!\n\n–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞–∑–¥–µ–ª:",
            reply_markup=reply_markup,
        )

# ====== –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–∂–∞—Ç–∏–π –∫–Ω–æ–ø–æ–∫ ======
